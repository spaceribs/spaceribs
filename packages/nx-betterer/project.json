{
  "name": "nx-betterer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-betterer/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-betterer",
        "main": "packages/nx-betterer/src/index.ts",
        "tsConfig": "packages/nx-betterer/tsconfig.lib.json",
        "assets": [
          "packages/nx-betterer/*.md",
          {
            "input": "./packages/nx-betterer/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-betterer/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-betterer",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-betterer",
            "glob": "executors.json",
            "output": "."
          }
        ],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/nx-betterer/**/*.ts",
          "packages/nx-betterer/generators.json",
          "packages/nx-betterer/executors.json",
          "packages/nx-betterer/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/nx-betterer/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "postTargets": ["nx-betterer:github", "nx-betterer:npm"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "betterer": {
      "executor": "@spaceribs/nx-betterer:betterer"
    },
    "typedoc": {
      "executor": "@enio.ai/typedoc:typedoc",
      "outputs": ["{workspaceRoot}/docs/packages/nx-betterer"],
      "options": {
        "options": "typedoc.json"
      },
      "configurations": {}
    }
  },
  "tags": []
}
